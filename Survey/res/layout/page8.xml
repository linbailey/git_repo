<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="page8" >

    <Button
        android:id="@+id/btnpage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="#0067e7"
        android:onClick="Page8"
        android:text="Continue"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txtAtt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/question10"
        android:textSize="22dp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtAtt7"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="69dp"
            android:layout_height="44dp"
            android:text="1 -                      All the time"
            android:textSize="12dp"
            android:gravity="right" />

        <RadioButton
            android:id="@+id/rdbtnfamiliarity_place1"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnfamiliarity_place2"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnfamiliarity_place3"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnfamiliarity_place4"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnfamiliarity_place5"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/TextView5"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:text="- 5               Never before"
            android:textSize="12dp" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonpage8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnpage4"
        android:layout_alignBottom="@+id/btnpage4"
        android:layout_alignParentLeft="true"
        android:background="#0067e7"
        android:onClick="BackButton"
        android:text="Back"
        android:textColor="#ffffff"
        android:tag = "page8" />

</RelativeLayout>