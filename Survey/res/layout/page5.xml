<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="page5" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/question4"
        android:textSize="22dp" />
     
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rdbtnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:text="Home" />

        <RadioButton
            android:id="@+id/rdbtneducational"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rdbtnplacetype1"
            android:text="Educational (class room, library...)" />

        <RadioButton
            android:id="@+id/rdbtnvocational"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rdbtnplacetype2"
            android:text="Vocational (work, office...)" />

        <RadioButton
            android:id="@+id/rdbtnrecreational"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rdbtnplacetype3"
            android:text="Recreational / entertainment (bar, gym...)" />
        
        <RadioButton
        	android:id="@+id/rdbtntransit"
        	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true"
        	android:layout_below="@+id/rdbtnplacetype4"
        	android:text="In transit (train, car...)" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioGroup01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="72dp"
            android:layout_height="78dp"
            android:gravity="right"
            android:text="1 -                 Not at all - e.g. nobody is socializing"
            android:textSize="12dp" />


        <RadioButton
            android:id="@+id/rdbtnsociability1"
           android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnsociability2"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnsociability3"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnsociability4"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtnsociability5"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textSize = "12dp"
            android:text="- 5                     Very much - e.g. everybody is socializing" />
    </RadioGroup>

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="19dp"
        android:text="@string/question5"
        android:textSize="22dp" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
    </RadioGroup>

    <Button
        android:id="@+id/btnpage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="#0067e7"
        android:onClick="Page5"
        android:text="Continue"
        android:textColor="#ffffff" 
        android:tag="page5"/>

    <Button
        android:id="@+id/buttonpage5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnpage4"
        android:layout_alignBottom="@+id/btnpage4"
        android:layout_alignParentLeft="true"
        android:background="#0067e7"
        android:onClick="BackButton"
        android:text="Back"
        android:textColor="#ffffff" 
        android:tag = "page5"/>

</RelativeLayout>