<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="page7" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/question8"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="60dp"
        android:text="@string/question9"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btnpage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="#0067e7"
        android:onClick="Page7"
        android:text="Continue"
        android:textColor="#ffffff" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="66dp"
            android:layout_height="68dp"
            android:gravity="right"
            android:text="1 -                     Not crowded at all"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rdbtncrowdedness1"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtncrowdedness2"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtncrowdedness3"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtncrowdedness4"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <RadioButton
            android:id="@+id/rdbtncrowdedness5"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/TextView5"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:text="- 5                  Very crowded"
            android:textSize="12dp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/radioGroup1"
        android:layout_below="@+id/TextView3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="66dp"
            android:layout_height="63dp"
            android:text="1 -                  Not at all (I&apos;m bored)"
            android:textSize="12dp"
            android:gravity="right" />

        <RadioButton android:id="@+id/rdbtnbusyness1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
        <RadioButton android:id="@+id/rdbtnbusyness2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
        <RadioButton android:id="@+id/rdbtnbusyness3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
        <RadioButton android:id="@+id/rdbtnbusyness4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
        <RadioButton android:id="@+id/rdbtnbusyness5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/TextView7"
            android:layout_width="64dp"
            android:layout_height="68dp"
            android:text="- 5                   Very much (I&apos;m very busy)"
            android:textSize="12dp" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonpage7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnpage4"
        android:layout_alignBottom="@+id/btnpage4"
        android:layout_alignParentLeft="true"
        android:background="#0067e7"
        android:onClick="BackButton"
        android:text="Back"
        android:textColor="#ffffff" 
        android:tag = "page7"/>

</RelativeLayout>